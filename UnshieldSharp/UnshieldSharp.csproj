<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net48;netcoreapp3.1;net5.0</TargetFrameworks>
    <PlatformTarget>x86</PlatformTarget>
    <Title>UnshieldSharp</Title>
    <AssemblyName>UnshieldSharp</AssemblyName>
    <Description>Port of Unshield to C#</Description>
    <Authors>Matt Nadareski;David Eriksson</Authors>
    <Product>UnshieldSharp</Product>
    <Copyright>Copyright (c)2003-2021 David Eriksson (MIT License), Copyright (c)2018-2021 Matt Nadareski</Copyright>
    <PackageLicenseFile>LICENSE.txt</PackageLicenseFile>
    <RepositoryUrl>https://github.com/mnadareski/UnshieldSharp</RepositoryUrl>
    <Version>1.6.0</Version>
    <AssemblyVersion>1.6.0</AssemblyVersion>
    <FileVersion>1.6.0</FileVersion>
    <IncludeSource>true</IncludeSource>
    <IncludeSymbols>true</IncludeSymbols>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>

  <!-- This is needed so that the zlib.net assembly info doesn't interfere with the auto-generated ones -->
  <PropertyGroup>
    <DefaultItemExcludes>$(DefaultItemExcludes);zlib.net\AssemblyInfo.cs</DefaultItemExcludes>
  </PropertyGroup>

  <ItemGroup>
    <None Include="LICENSE.txt" Pack="true" PackagePath="$(PackageLicenseFile)" />
  </ItemGroup>

</Project>